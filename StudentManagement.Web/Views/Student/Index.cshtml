@model IEnumerable<StudentManagement.Entity.StudentDetails>

@{
    ViewBag.Title = "Student";
}

<h2>Student</h2>

@Html.ActionLink("Add student","Create")<br />

@if(TempData["Message"]!=null)
{
    @Html.Label((string) TempData["Message"])
}
<h2>Student</h2>
<table border="1">
    <tr>
        <td>StudentId</td>
        <td>StudentName</td>
        <td>StudentDept</td>
        <td>Action</td>
    </tr>
    @foreach(StudentManagement.Entity.StudentDetails item in @Model)
    {
        <tr>
            <td>
                @item.StudentId
            </td>
            <td>
                @item.StudentName
            </td>
            <td>
                @item.StudentDept
            </td>
            <td>
                @Html.ActionLink("Edit","Edit",new { id=item.StudentId})
                @Html.ActionLink("Delete","Delete",new { id=item.StudentId})
            </td>
        </tr>
    }
</table>