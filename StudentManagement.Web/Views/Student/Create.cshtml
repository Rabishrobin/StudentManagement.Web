@model StudentManagement.Entity.StudentDetails

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Student", FormMethod.Post))
{
    <table cellpadding="10">
        <tr>
            <td>
                @Html.Label("StudentId")
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.StudentId)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.StudentName)</td>
            <td>@Html.EditorFor(Model => Model.StudentName)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.StudentDept)</td>
            <td>@Html.EditorFor(Model => Model.StudentDept)</td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Back to list", "Index")
            </td>
            <td>
                <input type="submit" id="Add" />
            </td>
        </tr>
    </table>
}